{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true,
          "dtoFileNameSuffix": [
            ".dto.ts",
            ".entity.ts"
          ]
        }
      }
    ],
    "assets": [
      {
        "include": "common/i18n/**/*",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true
  }
}